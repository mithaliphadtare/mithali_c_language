#include<stdio.h>
int main(){
    int arr1[2][2];
    int arr2[2][2];
    int arr[2][2];

    printf("enter elemnts of array 1: ");
    int i,j;
    for(i=0;i<2;i++){
        for(j=0;j<2;j++){
            scanf("%d",&arr1[i][j]);
        }
    }

    printf("enter elemnts of array 2: ");
    
    for(i=0;i<2;i++){
        for(j=0;j<2;j++){
            scanf("%d",&arr2[i][j]);
        }
    }
    
    for(i=0;i<2;i++){
        for(j=0;j<2;j++){
            arr[i][j]=arr1[i][j]+arr2[i][j];
        }
        printf("\n");
    }

    for(i=0;i<2;i++){
        for(j=0;j<2;j++){
            printf(" %d",arr[i][j]);
        }
        printf("\n");
    }

return 0;
